  <changeSet id="create-table-account_preference" author="leandroluk@gmail.com">
    <sql splitStatements="false" endDelimiter=";"><![CDATA[
      CREATE TABLE "account_preference" (
        "id"                         UUID           NOT NULL,
        "ts"                         TIMESTAMPTZ(3) NOT NULL DEFAULT NOW(),
        "theme"                      VARCHAR(10)    NOT NULL,
        "notify_on_pipeline_success" BOOLEAN        NOT NULL DEFAULT TRUE,
        "notify_on_infra_alerts"     BOOLEAN        NOT NULL DEFAULT TRUE,
        "account_id"                 UUID           NOT NULL,
        --
        PRIMARY KEY ("id"),
        FOREIGN KEY ("account_id") REFERENCES "account" ("id") ON DELETE CASCADE,
        UNIQUE      ("account_id")
      );
    ]]></sql>
    <rollback><sql splitStatements="false" endDelimiter=";"><![CDATA[
      DROP TABLE "account_preference";
    ]]></sql></rollback>
  </changeSet>

