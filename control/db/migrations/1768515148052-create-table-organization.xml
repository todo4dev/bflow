  <changeSet id="create-table-organization" author="leandroluk@gmail.com">
    <sql splitStatements="false" endDelimiter=";"><![CDATA[
      CREATE TABLE "organization" (
        "id"                 UUID           NOT NULL,
        "ts"                 TIMESTAMPTZ(3) NOT NULL DEFAULT now(),
        "created_at"         TIMESTAMPTZ(3) NOT NULL DEFAULT now(),
        "deleted_at"         TIMESTAMPTZ(3)     NULL,
        "name"               VARCHAR(100)   NOT NULL,
        "slug"               VARCHAR(100)   NOT NULL,
        "config"             JSONB          NOT NULL,
        "creator_account_id" UUID               NULL,
        --
        PRIMARY KEY ("id"),
        FOREIGN KEY ("creator_account_id") REFERENCES "account" ("id") ON DELETE SET NULL
      );
    ]]></sql>

    <rollback><sql splitStatements="false" endDelimiter=";"><![CDATA[
      DROP TABLE "organization";
    ]]></sql></rollback>
  </changeSet>

