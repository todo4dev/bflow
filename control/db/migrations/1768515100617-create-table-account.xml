  <changeSet id="create-table-account" author="leandroluk@gmail.com">
    <sql splitStatements="false" endDelimiter=";"><![CDATA[
      CREATE TABLE "account" (
        "id"                UUID           NOT NULL,
        "ts"                TIMESTAMPTZ(3) NOT NULL DEFAULT NOW(),
        "created_at"        TIMESTAMPTZ(3) NOT NULL DEFAULT NOW(),
        "deleted_at"        TIMESTAMPTZ(3)     NULL,
        "email"             VARCHAR(100)   NOT NULL,
        "email_verified_at" TIMESTAMPTZ(3)     NULL,
        "role"              VARCHAR(100)   NOT NULL,
        --
        PRIMARY KEY ("id"),
        UNIQUE      ("email")
      );
    ]]></sql>

    <rollback><sql splitStatements="false" endDelimiter=";"><![CDATA[
      DROP TABLE "account";
    ]]></sql></rollback>
  </changeSet>

