  <changeSet id="create-table-account_profile" author="leandroluk@gmail.com">
    <sql splitStatements="false" endDelimiter=";"><![CDATA[
      CREATE TABLE "account_profile" (
        "id"          UUID           NOT NULL,
        "ts"          TIMESTAMPTZ(3) NOT NULL DEFAULT NOW(),
        "given_name"  VARCHAR(100)       NULL,
        "family_name" VARCHAR(100)       NULL,
        "theme"       VARCHAR(10)    NOT NULL,
        "language"    VARCHAR(10)    NOT NULL,
        "timezone"    VARCHAR(50)    NOT NULL,
        "account_id"  UUID           NOT NULL,
        --
        PRIMARY KEY ("id"),
        FOREIGN KEY ("account_id") REFERENCES "account" ("id") ON DELETE CASCADE,
        UNIQUE      ("account_id")
      );
    ]]></sql>
    <rollback><sql splitStatements="false" endDelimiter=";"><![CDATA[
      DROP TABLE "account_profile";
    ]]></sql></rollback>
  </changeSet>

